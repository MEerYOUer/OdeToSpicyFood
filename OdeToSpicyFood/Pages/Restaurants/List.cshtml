@page
@model OdeToSpicyFood.ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<div class="container">
    <h1 class="title-margins mb-sm-4">List of Restaurants</h1>
    <div class="mb-sm-4">
        <a asp-page=".\Edit" class="btn btn-dark">Add New</a>
        <a asp-page=".\ClientRestaurant" class="btn btn-info">View Alternate List (jQuery)</a>
    </div>

    <form method="get">
        <div class="form-group">
            <div class="input-group mt-3">
                <input type="search" class="form-control" asp-for="SearchTerm" />
                <div class="input-group-append">
                    <button class="btn btn-secondary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>
    <div class="d-flex flex-row flex-wrap justify-content-center">
        @foreach (var restaurant in Model.Restaurants)
        {
            <partial name="_Summary" model="restaurant" />
        }
    </div>
    <div class="mt-3">
        <a asp-page=".\Edit" class="btn btn-dark">Add New</a>
        <a asp-page=".\ClientRestaurant" class="btn btn-info">View Alternate List (jQuery)</a>
    </div>
</div>