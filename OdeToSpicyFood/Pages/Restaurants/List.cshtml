@page
@model OdeToSpicyFood.ListModel
@{
    ViewData["Title"] = "List";
}
<h1>List of Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <div class="input-group-append">
                <button class="btn btn-secondary">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <tr class="table-success">
        <td>Name</td>
        <td>Location</td>
        <td>Cuisine</td>
        <td>Rating</td>
        <td></td>
        <td></td>
    </tr>
    @foreach(var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>@restaurant.Rating</td>
            <td><a class="fas fa-search-plus" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id"></a></td>
            <td><a class="fas fa-edit" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id"></a></td>
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-dark">Add New</a>
